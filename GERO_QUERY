GERO

UPDATE [SIRIS_APP_BCI].[dbo].[ERO_EVENTOS_CRIADOS]
SET ID_CLASSIF_IMPACTO_FINANCEIRO = (SELECT ID_CLASSIF_IMPACTO 
									   FROM [SIRIS_APP_BCI].[AUX].[ERO_LIMITES_CLASSIFS_IMPACTO]
									  WHERE ((LEN(ID_PROCESSO) = 3 AND ID_CLASSIF_IMPACTO <= 15) OR (LEN(ID_PROCESSO) > 3 AND ID_CLASSIF_IMPACTO > 15))
									    AND ((VL_PERDA_IMPACTO_FINANCEIRO_USD BETWEEN VAL_VALOR_PERDA_MIN AND VAL_VALOR_PERDA_MAX) or (VL_PERDA_IMPACTO_FINANCEIRO_USD > VAL_VALOR_PERDA_MIN and VAL_VALOR_PERDA_MAX is null)))
WHERE ID_EVENTO = '20230605_93'
 
EXEC [ODS].[spActualizaNivelRisco_ERO] '20230605_93'
